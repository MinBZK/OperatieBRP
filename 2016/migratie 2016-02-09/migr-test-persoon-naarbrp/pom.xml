<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>nl.bzk.migratiebrp.test</groupId>
        <artifactId>migr-test-persoon</artifactId>
        <version>3.2.108-SNAPSHOT</version>
        <relativePath>../migr-test-persoon</relativePath>
    </parent>
    <groupId>nl.bzk.migratiebrp.test.persoon</groupId>
    <artifactId>migr-test-persoon-naarbrp</artifactId>
    <name>Migr - Test - Persoon - Conversie LO3 naar BRP</name>

    <properties>
        <resource.dir>local</resource.dir>
    </properties>

    <dependencies>
        <dependency>
            <groupId>nl.bzk.migratiebrp.util</groupId>
            <artifactId>migr-util-common</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp.test</groupId>
            <artifactId>migr-test-dal</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp.conversie</groupId>
            <artifactId>migr-conversie-model</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp.conversie</groupId>
            <artifactId>migr-conversie-model</artifactId>
            <type>test-jar</type>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp.conversie</groupId>
            <artifactId>migr-conversie-regels</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp.conversie</groupId>
            <artifactId>migr-conversie-regels</artifactId>
            <type>test-jar</type>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp.bericht</groupId>
            <artifactId>migr-bericht-model</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp.util</groupId>
            <artifactId>migr-util-excel</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp.synchronisatie</groupId>
            <artifactId>migr-synchronisatie-dal</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp.synchronisatie</groupId>
            <artifactId>migr-synchronisatie-dal</artifactId>
            <type>test-jar</type>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp.init.logging</groupId>
            <artifactId>migr-init-logging-verschilanalyse</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-beans</artifactId>
        </dependency>

        <!-- DBUnit -->
        <dependency>
            <groupId>org.dbunit</groupId>
            <artifactId>dbunit</artifactId>
        </dependency>

        <!-- junit -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>

        <dependency>
            <groupId>org.hsqldb</groupId>
            <artifactId>hsqldb</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <finalName>migr-test-lo3naarbrp</finalName>
                    <appendAssemblyId>false</appendAssemblyId>
                    <descriptors>
                        <descriptor>src/main/assembly/assembly.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
            </testResource>
            <testResource>
                <directory>src/test/non-packaged-resources/${resource.dir}</directory>
            </testResource>
        </testResources>
    </build>

    <profiles>
        <profile>
            <id>default-tests</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <excludes>
                                <exclude>**/Lo3NaarBrpConversieTest.java</exclude>
                                <exclude>**/RegressieTest.java</exclude>
                                <exclude>**/CoverageTest.java</exclude>
                                <exclude>**/RelaterenTest.java</exclude>
                                <exclude>**/RelaterenTest2.java</exclude>
                                <exclude>**/SingleTest.java</exclude>
                                <exclude>**/ParameterizedTest.java</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>coverage</id>
            <properties>
                <resource.dir>regressie</resource.dir>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <excludes>
                                <exclude>**/Lo3NaarBrpConversieTest.java</exclude>
                                <exclude>**/RegressieTest.java</exclude>
                                <!--<exclude>**/CoverageTest.java</exclude>-->
                                <exclude>**/RelaterenTest.java</exclude>
                                <exclude>**/RelaterenTest2.java</exclude>
                                <exclude>**/SingleTest.java</exclude>
                                <exclude>**/ParameterizedTest.java</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>regressie</id>
            <properties>
                <resource.dir>regressie</resource.dir>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <test>RegressieTest</test>
                            <excludes>
                                <exclude>**/*</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>regressie-coverage</id>
            <properties>
                <resource.dir>regressie_local</resource.dir>
            </properties>
            <activation>
                <property>
                    <name>regressie-coverage</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <test>RegressieTest</test>
                            <excludes>
                                <exclude>**/*</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>relateren</id>
            <properties>
                <resource.dir>relateren</resource.dir>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <test>RelaterenTest</test>
                            <excludes>
                                <exclude>**/*</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>relateren2</id>
            <properties>
                <resource.dir>relateren2</resource.dir>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <test>RelaterenTest2</test>
                            <excludes>
                                <exclude>**/*</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>conversie</id>
            <properties>
                <resource.dir>remote</resource.dir>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <test>Lo3NaarBrpConversieTest</test>
                            <excludes>
                                <exclude>**/*</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>

