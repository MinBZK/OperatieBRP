	<bean id="iscConnectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
	    <property name="brokerURL">
	        <value>${isc.queue.url:service:tcp://localhost:61616}</value>
	    </property>
	</bean>

    <bean name="iscJmsTemplate" class="org.springframework.jms.core.JmsTemplate">
        <property name="connectionFactory" ref="iscConnectionFactory" />
        <property name="receiveTimeout" value="${isc.queue.timeout:30000}" />
        <property name="sessionTransacted" value="true" />
