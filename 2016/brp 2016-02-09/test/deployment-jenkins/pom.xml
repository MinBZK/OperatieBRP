        <profile>
            <id>tomcat</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-clean-plugin</artifactId>
                        <version>2.4.1</version>
                        <configuration>
                            <filesets>
                                <fileset>
                                    <directory>target/</directory>
                                    <includes>
                                        <include>**/*</include>
                                    </includes>
                                    <excludes>
                                        <exclude>downloads/**</exclude>
                                    </excludes>
                                    <followSymlinks>false</followSymlinks>
                                </fileset>
                            </filesets>
                            <excludeDefaultDirectories>true</excludeDefaultDirectories>
                        </configuration>
                        <executions>
                            <execution>
                                <id>auto-clean</id>
                                <phase>clean</phase>
                                <goals>
                                    <goal>clean</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.cargo</groupId>
                        <artifactId>cargo-maven2-plugin</artifactId>
                        <version>1.4.16</version>
                        <configuration>
                            <container>
                                <containerId>tomcat7x</containerId>
                                <zipUrlInstaller>
                                    <url>
                                        http://archive.apache.org/dist/tomcat/tomcat-7/v7.0.65/bin/apache-tomcat-7.0.65.zip
                                    </url>
                                    <downloadDir>${project.build.directory}/downloads</downloadDir>
                                    <extractDir>${project.build.directory}/tomcat</extractDir>
                                </zipUrlInstaller>
                            </container>
                            <configuration>
                                <type>standalone</type>
                                <home>${project.build.directory}/tomcat</home>
                                <properties>
                                    <cargo.servlet.port>8080</cargo.servlet.port>
                                    <cargo.jvmargs>-Djava.awt.headless=true -server -Xms1G -XX:PermSize=128m -XX:ReservedCodeCacheSize=64M
                                    </cargo.jvmargs>
                                </properties>
                            </configuration>
                        </configuration>
                        <executions>
                            <execution>
                                <id>download</id>
                                <goals>
                                    <goal>install</goal>
                                </goals>
                                <phase>package</phase>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>2.8</version>
                        <executions>
                            <execution>
                                <id>copy</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>org.postgresql</groupId>
                                            <artifactId>postgresql</artifactId>
                                            <version>${postgres.version}</version>
                                            <type>jar</type>
                                            <overWrite>false</overWrite>
                                            <outputDirectory>
                                                ${project.build.directory}/tomcat/apache-tomcat-7.0.65/apache-tomcat-7.0.65/lib
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>commons-dbcp</groupId>
                                            <artifactId>commons-dbcp</artifactId>
                                            <type>jar</type>
                                        </artifactItem>
                                    </artifactItems>
                                    <outputDirectory>
                                        ${project.build.directory}/tomcat/apache-tomcat-7.0.65/apache-tomcat-7.0.65/lib
                                    </outputDirectory>
                                    <overWriteReleases>false</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.7</version>
                        <executions>
                            <execution>
                                <id>copy-war-files</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target name="deploy gekozen applicaties en configuratie">
                                        <copy todir="${project.build.directory}/tomcat/apache-tomcat-7.0.65/apache-tomcat-7.0.65/bin">
                                            <fileset dir="${project.basedir}/src/main/etc/tomcat">
                                                <patternset id="tomcat.setenv">
                                                    <include name="setenv.*"/>
                                                </patternset>
                                            </fileset>
                                        </copy>
                                        <copy todir="${project.build.directory}/tomcat/apache-tomcat-7.0.65/apache-tomcat-7.0.65/webapps">
                                            <fileset dir="${project.build.directory}/deployment-artefacten"
                                                     includes="*.war">
                                                <filename regex="^*.war"/>
                                            </fileset>

                                        </copy>
                                        <copy todir="${project.build.directory}/tomcat/apache-tomcat-7.0.65/apache-tomcat-7.0.65/lib">
                                            <fileset dir="${project.build.directory}/deployment-artefacten/configuratie"
                                                     includes="*.properties">
                                                <filename regex="^*.properties"/>

                                            </fileset>
                                        </copy>
                                        <copy todir="${project.build.directory}/tomcat/apache-tomcat-7.0.65/apache-tomcat-7.0.65/lib">
                                            <fileset dir="${project.build.directory}/deployment-artefacten/configuratie"
                                                     includes="*.xml">
                                                <filename regex="^*.xml"/>
                                            </fileset>
                                        </copy>
                                        <copy todir="${project.build.directory}/tomcat/apache-tomcat-7.0.65/apache-tomcat-7.0.65/lib">
                                            <fileset dir="${project.build.directory}/deployment-artefacten/keystores"
                                                     includes="*.jks">
                                                <filename regex="^*.jks"/>
                                            </fileset>
                                        </copy>

                                        <copy todir="${project.build.directory}/tomcat/apache-tomcat-7.0.65/apache-tomcat-7.0.65/conf">
                                            <fileset dir="${project.basedir}/src/main/etc/conf"
                                                     includes="*.xml">
                                                <filename regex="^*.xml"/>
                                            </fileset>
                                        </copy>
                                        <copy todir="${project.build.directory}/tomcat/apache-tomcat-7.0.65/apache-tomcat-7.0.65/bin">
                                            <fileset dir="${project.basedir}/src/main/etc/tomcat">
                                                <patternset id="tomcat.startup">
                                                    <include name="startup.bat"/>
                                                </patternset>
                                            </fileset>
                                        </copy>

                                        <!-- <exec executable="sh" osfamily="unix">
                                             <arg line='-c "chmod a+x ${project.build.directory}/tomcat/apache-tomcat-7.0.65/apache-tomcat-7.0.65/bin/*.sh"'/>
                                         </exec>-->
                                    </target>

                                </configuration>
                            </execution>
                            <execution>
                                <id>make-executable</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target name="Maak shell scripts executable">
                                        <chmod dir="${project.build.directory}/tomcat/apache-tomcat-7.0.65/apache-tomcat-7.0.65/bin/"
                                               includes="*.sh" perm="a+x"/>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

